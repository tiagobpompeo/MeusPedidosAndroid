<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Tema" parent="Tema.Base">
    </style>
    <style name="SplashTheme" parent="SplashTheme.Base">
        <!-- Set theme colors from http://www.google.com/design/spec/style/color.html#color-color-palette-->
        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">#990099</item>
        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/material_blue_700</item>
        <!-- colorAccent is used as the default value for colorControlActivated
            which is used to tint widgets -->
        <item name="colorAccent">@color/material_green_A200</item>
    </style>
    <!-- Application theme. -->
    <style name="Tema.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">#0d0d0d</item>
        <item name="colorPrimaryDark">#004d80</item>
        <item name="colorAccent">#FF4081</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>
    <style name="SplashTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@layout/SplashScreen</item>
    </style>
</resources>